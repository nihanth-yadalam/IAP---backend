# Database (PostgreSQL async)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/iap_db

# Security
SECRET_KEY=change_this_secret_key_to_something_secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Webhooks (for production â€” must be HTTPS and publicly reachable)
WEBHOOK_BASE_URL=https://your-domain.com

# Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
